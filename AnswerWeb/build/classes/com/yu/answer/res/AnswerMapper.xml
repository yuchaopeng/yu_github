<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.yu.answer.mapper.AnswerMapper">  
	<sql id='TABLE_SEQUENCE'>SEQ_ANSWER.nextval</sql>
	
	<insert id="addAnswer" parameterType="Answer" useGeneratedKeys="true" keyProperty="id" >
		insert into A_ANSWER(id,name,qid,user_id,create_date,end_date,right_num,wrong_num) values (<include refid="TABLE_SEQUENCE" /> ,#{name},#{question.id,jdbcType=INTEGER},#{user.id,jdbcType=INTEGER},#{createDate,jdbcType=DATE},#{endDate,jdbcType=DATE},#{rightNum},#{wrongNum})
	</insert>
</mapper>  